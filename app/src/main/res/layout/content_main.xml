<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Name:"
        android:layout_alignBaseline="@+id/txtCarName"
        android:layout_alignBottom="@+id/txtCarName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <EditText
        android:id="@+id/txtCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Switch
        android:id="@+id/swNumDoors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:showText="true"
        android:splitTrack="true"
        android:textOff="2"
        android:textOn="4"
        tools:checked="true"
        android:layout_below="@+id/txtCarName"
        android:layout_alignLeft="@+id/txtCarName"
        android:layout_alignStart="@+id/txtCarName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/swNumDoors"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="Number of Doors:" />

    <Spinner
        android:id="@+id/spnTireType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:entries="@array/tire_type"
        android:layout_below="@+id/swNumDoors"
        android:layout_alignLeft="@+id/txtCarName"
        android:layout_alignStart="@+id/txtCarName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spnTireType"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="Tire Type: " />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="12dp"
        android:text="Number of Cylinders: "
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Spinner
        android:id="@+id/spnCylinders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/spnTireType"
        android:layout_alignStart="@+id/spnTireType"
        android:entries="@array/cylinders"/>

    <Spinner
        android:id="@+id/spnWheelSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview"
        android:layout_alignLeft="@+id/spnCylinders"
        android:layout_alignStart="@+id/spnCylinders"
        android:entries="@array/wheel_size"/>/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spnWheelSize"
        android:layout_alignLeft="@+id/txtview"
        android:layout_alignStart="@+id/txtview"
        android:text="Wheel Size: " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drivetrain"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="17dp" />

    <Switch
        android:id="@+id/swDrivetrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/spnWheelSize"
        android:layout_alignStart="@+id/spnWheelSize"
        android:showText="true"
        android:textOff="RWD"
        android:textOn="AWD" />

    <Spinner
        android:id="@+id/spnCreatedCars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created Cars"
        android:layout_below="@+id/btnAdd"
        android:layout_alignRight="@+id/swDrivetrain"
        android:layout_alignEnd="@+id/swDrivetrain"
        android:layout_marginTop="36dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Add Car to Shipping Crate"
        android:layout_below="@+id/swDrivetrain"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

</RelativeLayout>